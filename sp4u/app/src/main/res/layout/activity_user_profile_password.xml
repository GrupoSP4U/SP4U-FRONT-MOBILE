<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fund"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkBlue"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/ll_dados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_usuario"
                android:layout_width="95dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:src="@drawable/user"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/tv_alterar_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:text="@string/user_profile_alterar_foto"
                android:textColor="@color/Blue"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:text="@string/user_profile_apelido"
                android:textColor="@color/White"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="10dp"
        android:background="@color/DarkBlue">

        <TextView
            android:id="@+id/tv_configuracoes"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="@string/user_profile_configuracoes_basicas"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:background="@color/DarkBlue"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textAlignment="center"
            android:onClick="goToBasicSettings"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/DarkBlue"
            android:padding="5dp"
            android:text="@string/user_profile_alterar_email"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@id/tv_configuracoes"
            android:onClick="goToEmailEditing"/>

        <TextView
            android:id="@+id/tv_senha"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/DarkBlue"
            android:padding="5dp"
            android:text="@string/user_profile_alterar_senha"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/tv_email" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_dados"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_senha_antiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/user_profile_senha_antiga"
            android:textColor="@color/White"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_menu"
            tools:layout_editor_absoluteX="66dp" />

        <EditText
            android:id="@+id/et_senha_antiga"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_blue"
            android:fontFamily="@font/montserrat"
            android:hint="@string/user_profile_hint_senha"
            android:inputType="textPassword"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_senha_antiga" />

        <TextView
            android:id="@+id/tv_senha_nova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/user_profile_senha_nova"
            android:textColor="@color/White"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/et_senha_antiga"
            tools:layout_editor_absoluteX="66dp" />

        <EditText
            android:id="@+id/et_senha_nova"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_blue"
            android:fontFamily="@font/montserrat"
            android:hint="@string/user_profile_hint_senha"
            android:inputType="textPassword"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_senha_nova" />

        <TextView
            android:id="@+id/tv_confirma_senha_nova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/user_profile_confirma_senha"
            android:textColor="@color/White"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/et_senha_nova"
            tools:layout_editor_absoluteX="66dp" />

        <EditText
            android:id="@+id/et_confirma_senha_nova"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_blue"
            android:fontFamily="@font/montserrat"
            android:hint="@string/user_profile_hint_senha"
            android:inputType="textPassword"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_confirma_senha_nova" />

        <Button
            android:id="@+id/bt_concluir"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/LightBlue"
            android:text="@string/user_profile_botao_alterar_senha"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:onClick="changePassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_confirma_senha_nova" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fr_menu"
        app:layout_constraintTop_toBottomOf="@+id/sv_dados">
        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.example.sp4u_app.fragment.MenuFragment"
            />
    </FrameLayout>
</LinearLayout>