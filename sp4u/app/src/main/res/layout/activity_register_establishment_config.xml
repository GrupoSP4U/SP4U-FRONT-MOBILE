<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fund"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_titulo_config_estabelecimento"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/LightRed"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_estabelecimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/icon_company" />

            <TextView
                android:id="@+id/tv_titulo_cadastro_estabelecimento_config"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/estabilishment_config_nome_estabelecimento"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_menu_cadastro_estabelecimento_config"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_config_basica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:width="100dp"
                    android:textAlignment="center"
                    android:height="40dp"
                    android:text="@string/estabilishment_config_menu_config_basica"
                    android:textColor="@color/Grey"
                    android:textColorHint="@color/LightBlue" />

                <TextView
                    android:id="@+id/tv_desc_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:textAlignment="center"
                    android:width="100dp"
                    android:height="40dp"
                    android:onClick="goToDescriptionOfRole"
                    android:text="@string/estabilishment_config_menu_config_role"
                    android:textColor="@color/White"
                    android:textColorHint="@color/LightBlue" />

                <TextView
                    android:id="@+id/tv_alterar_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:textAlignment="center"
                    android:width="100dp"
                    android:height="40dp"
                    android:text="@string/estabilishment_config_menu_config_img"
                    android:textColor="@color/White"
                    android:textColorHint="@color/LightBlue" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <LinearLayout
                android:id="@+id/ll_configuracao_basica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:paddingEnd="40dp">

                <TextView
                    android:id="@+id/tv_razao_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/estabilishment_config_basica_razao_social"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="66dp" />

                <EditText
                    android:id="@+id/et_razao_social"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/et_style_orange"
                    android:fontFamily="@font/montserrat"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White" />

                <TextView
                    android:id="@+id/tv_nome_fantasia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/estabilishment_config_basica_nome_fantasia"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="66dp" />

                <EditText
                    android:id="@+id/et_nome_fantasia"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8sp"
                    android:background="@drawable/et_style_orange"
                    android:fontFamily="@font/montserrat"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White" />

                <TextView
                    android:id="@+id/tv_telefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/estabilishment_config_basica_telefone"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="66dp" />

                <EditText
                    android:id="@+id/et_telefone"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8sp"
                    android:background="@drawable/et_style_orange"
                    android:fontFamily="@font/montserrat"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White" />

                <TextView
                    android:id="@+id/tv_endereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/estabilishment_config_basica_endereÃ§o"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="66dp" />

                <EditText
                    android:id="@+id/et_endereco"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8sp"
                    android:background="@drawable/et_style_orange"
                    android:fontFamily="@font/montserrat"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cep"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/estabilishment_config_basica_cep"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="66dp" />

                    <TextView
                        android:id="@+id/tv_bairro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/estabilishment_config_basica_bairro"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="66dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_cep"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/et_style_orange"
                        android:fontFamily="@font/montserrat"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White" />

                    <EditText
                        android:id="@+id/et_bairro"
                        android:layout_width="135dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/et_style_orange"
                        android:fontFamily="@font/montserrat"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cidade"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/estabilishment_config_basica_cidade"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="66dp" />

                    <TextView
                        android:id="@+id/tv_estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/estabilishment_config_basica_estado"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="66dp" />

                    <TextView
                        android:id="@+id/tv_numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/estabilishment_config_basica_numero"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="66dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_cidade"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8sp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/et_style_orange"
                        android:fontFamily="@font/montserrat"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White" />

                    <EditText
                        android:id="@+id/et_estado"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/et_style_orange"
                        android:fontFamily="@font/montserrat"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White" />


                    <EditText
                        android:id="@+id/et_numero"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/et_style_orange"
                        android:fontFamily="@font/montserrat"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_complemento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/estabilishment_config_basica_complemento"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="66dp" />

                    <EditText
                        android:id="@+id/et_complemento"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/et_style_orange"
                        android:fontFamily="@font/montserrat"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/estabilishment_config_basica_email"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="66dp" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="279dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/et_style_orange"
                        android:fontFamily="@font/montserrat"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White" />

                </LinearLayout>

                <Button
                    android:id="@+id/bt_concluir_config_estabelecimento"
                    android:layout_width="156dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="80dp"
                    android:background="@color/LightRed"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/estabilishment_config_basica_concluir"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="12sp"></Button>

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fr_menu">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.sp4u_app.fragment.MenuFragment"
                />
        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>