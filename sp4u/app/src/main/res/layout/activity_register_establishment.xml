<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Fund">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_titulo_estabelecimento"
            android:layout_width="360dp"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:background="@color/LightRed">

            <TextView
                android:id="@+id/tv_titulo_estabelecimento"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="57dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/estabilishment_titulo_cadastro_estabelecimento"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_subtitulo_estabelecimento"
                android:text="@string/estabilishment_subtitulo_cadastro_estabelecimento"
                android:textAlignment="center"
                android:layout_marginLeft="25dp"
                android:textColor="@color/White"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:layout_height="37dp"
                android:layout_width="312dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_titulo_estabelecimento"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_imagem_estabelecimento"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_estabelecimento"
                android:layout_width="79dp"
                android:layout_height="89dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_company"
                android:layout_marginLeft="140dp"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="175dp" />

            <TextView
                android:id="@+id/tv_informacoes_estabelecimento"
                android:layout_width="297dp"
                android:layout_height="89dp"
                android:layout_marginLeft="31dp"
                android:text="@string/estabilishment_informacoes_cadastro_estabelecimento"
                android:layout_marginTop="30dp"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@+id/img_estabelecimento"/>

            <Button
                android:id="@+id/bt_cadastrar_estabelecimento"
                android:layout_width="161dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:background="@color/LightBlue"
                android:text="@string/estabilishment_cadastro_estabelecimento"
                android:textSize="12sp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/Black"
                android:layout_marginTop="40dp"
                android:onClick="registerEstablishmen"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
