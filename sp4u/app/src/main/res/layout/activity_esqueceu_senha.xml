<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Fund">

    <TextView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/tv_titulo_esqueceu_senha"
        android:text="esqueceu sua senha?"
        android:textSize="32sp"
        android:textColor="@color/White"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nova_senha"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_esqueceu_senha"
        android:textColor="@color/White"
        android:text="nova senha"
        android:textSize="16sp"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="100dp"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/et_nova_senha"
        app:layout_constraintTop_toBottomOf="@id/tv_nova_senha"
        android:layout_marginTop="8sp"
        android:background="@color/White"
        android:fontFamily="@font/montserrat"
        android:inputType="textPassword"
        android:hint="Digite a nova senha"
        android:textColor="@color/Fund"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_confirma_senha"
        app:layout_constraintTop_toBottomOf="@id/et_nova_senha"
        android:textColor="@color/White"
        android:text="nova senha"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/et_confirmar_senha"
        app:layout_constraintTop_toBottomOf="@id/tv_confirma_senha"
        android:textColor="@color/Fund"
        android:fontFamily="@font/montserrat"
        android:background="@color/White"
        android:textSize="16sp"
        android:hint="Confirmar nova senha"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:id="@+id/bt_confirmar"
        app:layout_constraintTop_toBottomOf="@id/et_confirmar_senha"
        android:layout_marginTop="60dp"
        android:background="@color/Blue"
        android:text="confirmar"
        android:textColor="@color/White"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>