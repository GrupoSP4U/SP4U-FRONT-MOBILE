<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Fund"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:id="@+id/tv_titulo_cadastro_empresa"
        android:layout_width="193dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/White"
        android:fontFamily="@font/montserrat"
        android:text="@string/titulo_cadastro_estabelecimento"
        android:layout_marginTop="12sp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/tv_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_cadastro_empresa"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="28dp"
        android:text="@string/cadastro_estab_endereco"
        android:textColor="@color/White"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_enderece"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_endereco"
        android:fontFamily="@font/montserrat"
        android:hint="@string/et_cadastro_estab_endereco"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_orange"
        android:textColorHint="@color/White"
        android:textColor="@color/White"
        android:inputType="text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_enderece"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="28dp"
            android:text="@string/cadastro_estab_cep"
            android:textColor="@color/White"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="66dp"
            android:layout_marginRight="150dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_enderece"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="28dp"
            android:text="@string/cadastro_estab_bairro"
            android:textColor="@color/White"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="215dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_cep"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_orange"
            android:fontFamily="@font/montserrat"
            android:hint="@string/et_cadastro_estab_cep"
            android:inputType="text"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            app:layout_constraintTop_toBottomOf="@id/tv_cep"
            tools:layout_editor_absoluteX="66dp"
            android:layout_marginRight="55dp"
            />


        <EditText
            android:id="@+id/et_bairro"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_orange"
            android:fontFamily="@font/montserrat"
            android:hint="@string/et_cadastro_estab_bairro"
            android:inputType="text"
            android:textColorHint="@color/White"
            app:layout_constraintTop_toBottomOf="@id/tv_bairro"
            tools:layout_editor_absoluteX="215dp"
            />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_cep"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="28dp"
        android:text="@string/cadastro_estab_cidade"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:layout_marginRight="130dp"
        tools:layout_editor_absoluteX="66dp"
        />

    <TextView
        android:id="@+id/tv_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_cep"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="28dp"
        android:text="@string/cadastro_estab_estado"
        android:textColor="@color/White"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="195dp"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_cidade"
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_orange"
            android:fontFamily="@font/montserrat"
            android:hint="@string/et_cadastro_estab_cidade"
            android:inputType="text"
            android:textColorHint="@color/White"
            app:layout_constraintTop_toBottomOf="@id/tv_cidade"
            tools:layout_editor_absoluteX="66dp"
            android:layout_marginRight="70dp"
            />

        <EditText
            android:id="@+id/et_estado"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_orange"
            android:fontFamily="@font/montserrat"
            android:hint="@string/et_cadastro_estab_estado"
            android:inputType="text"
            android:textColorHint="@color/White"
            app:layout_constraintTop_toBottomOf="@id/tv_estado"
            tools:layout_editor_absoluteX="195dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_cep"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="28dp"
            android:text="@string/cadastro_estab_numero"
            android:textColor="@color/White"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="275dp"
            android:layout_marginRight="110dp"
            />

        <TextView
            android:id="@+id/tv_complemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_cidade"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="28dp"
            android:text="complemento"
            android:textColor="@color/White"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="66dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_numero"
            android:layout_width= "70dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_orange"
            android:fontFamily="@font/montserrat"
            android:hint="  -- "
            android:inputType="number"
            android:textColorHint="@color/White"
            app:layout_constraintTop_toBottomOf="@id/tv_numero"
            tools:layout_editor_absoluteX="275dp"
            android:layout_marginRight="100dp"
            />

        <EditText
            android:id="@+id/et_complemento"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/et_style_orange"
            android:fontFamily="@font/montserrat"
            android:hint="  --"
            android:inputType="text"
            android:textColorHint="@color/White"
            app:layout_constraintTop_toBottomOf="@id/tv_complemento"
            tools:layout_editor_absoluteX="66dp"
            />


    </LinearLayout>




    <TextView
        android:id="@+id/tv_email_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_complemento"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="18dp"
        android:text="@string/cadastro_estab_email"
        android:textColor="@color/White"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_email_contato"
        android:layout_width= "280dp"
        android:layout_height="40dp"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_orange"
        android:fontFamily="@font/montserrat"
        android:hint="@string/et_cadastro_email"
        android:inputType="text"
        android:textColorHint="@color/White"
        app:layout_constraintTop_toBottomOf="@id/tv_email_contato"
        tools:layout_editor_absoluteX="66dp"
        />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_email_contato"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_next"
        tools:layout_editor_absoluteX="315dp"
        android:onClick="goToRegisterEstablishmentMusic"
        />

</LinearLayout>