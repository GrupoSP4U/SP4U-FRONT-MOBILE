<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Fund">

    <TextView
        android:id="@+id/tv_titulo_cadastro"
        android:layout_width="193dp"
        android:layout_height="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat"
        android:text="cadastro"
        tools:layout_editor_absoluteY="60dp"
        android:textSize="18sp"
        android:background="@color/White"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/img_inicio"
        android:layout_width="95dp"
        android:layout_height="126dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_cadastro"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:src="@drawable/icon_cadastro_login"
        />

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_inicio"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="44dp"
        android:text="nome"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nome"
        android:fontFamily="@font/montserrat"
        android:hint="Digite seu e-mail"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/tv_nome_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_nome"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="25dp"
        android:text="nome social"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_nome_social"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nome_social"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="text"
        android:hint="Digite seu e-mail"
        />

    <TextView
        android:id="@+id/tv_nascimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_nome_social"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="25dp"
        android:text="data de nascimento"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_nascimento"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nascimento"
        android:fontFamily="@font/montserrat"
        android:hint="Digite seu e-mail"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="date"
        />

    <TextView
        android:id="@+id/tv_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_nascimento"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="25dp"
        android:text="telefone"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_telefone"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_telefone"
        android:fontFamily="@font/montserrat"
        android:hint="Digite seu e-mail"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="phone"
        />

    <TextView
        android:id="@+id/tv_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_telefone"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="25dp"
        android:text="genero"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_genero"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_genero"
        android:fontFamily="@font/montserrat"
        android:hint="Digite seu e-mail"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_genero"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="25dp"
        android:text="e-mail"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/et_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        android:fontFamily="@font/montserrat"
        android:hint="Digite seu e-mail"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/tv_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="25dp"
        android:text="senha"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_senha"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_senha"
        android:fontFamily="@font/montserrat"
        android:hint="Digite sua senha"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_confirmar_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_senha"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="25dp"
        android:text="genero"
        android:textColor="@color/White"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        />

    <EditText
        android:id="@+id/et_confirmar_senha"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirmar_senha"
        android:fontFamily="@font/montserrat"
        android:hint="Digite seu e-mail"
        android:layout_marginTop="8sp"
        android:background="@drawable/et_style_green"
        android:textColorHint="@color/White"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_fazer_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="146sp"
        app:layout_constraintTop_toBottomOf="@id/et_confirmar_senha"
        android:fontFamily="@font/montserrat"
        android:text="Ja é cadastrado? Faça o login"
        android:textColor="@color/White"
        android:textSize="10sp"
        />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="240dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fazer_login"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="30dp"
        android:background="@color/Green"
        android:text="entrar"
        android:textColor="@color/Fund"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>